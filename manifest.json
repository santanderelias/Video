{
  "name": "Video Player",
  "short_name": "Video",
  "start_url": ".",
  "display": "standalone",
  "background_color": "#121212",
  "theme_color": "#007bff",
  "description": "A simple PWA video player.",
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": ".",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "video",
          "accept": ["video/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": ".",
      "accept": {
        "video/*": [
          ".mp4",
          ".webm",
          ".ogg",
          ".mov",
          ".mkv",
          ".avi"
        ]
      }
    }
  ]
}