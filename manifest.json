{
  "name": "Video Player",
  "short_name": "Video",
  "start_url": ".",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "fullscreen"],
  "background_color": "#121212",
  "theme_color": "#007bff",
  "description": "A simple PWA video player.",
  "version": "1.1",
  "icons": [
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png"
    }
  ],
  "share_target": {
    "action": "index.html",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "files": [
        {
          "name": "video",
          "accept": ["video/*"]
        }
      ]
    }
  },
  "file_handlers": [
    {
      "action": "/video/index.html",
      "accept": {
        "video/*": [
          ".mp4",
          ".webm",
          ".ogg",
          ".mov",
          ".mkv"
        ]
      }
    }
  ]
}